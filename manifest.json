{
  "manifest_version": 3,
  "name": "YouTube Beatmaker Extension",
  "version": "2.0",
  "description": "Mark cue points, play drum sounds, and customize your experience on YouTube.",
  "permissions": ["storage", "activeTab", "scripting", "unlimitedStorage"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.youtube-nocookie.com/*",
    "https://samplette.io/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/pad.svg",
      "32": "icons/pad.svg",
      "48": "icons/pad.svg"
    }
  },
  "icons": {
    "16": "icons/pad.svg",
    "32": "icons/pad.svg",
    "48": "icons/pad.svg",
    "128": "icons/pad.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.youtube-nocookie.com/*",
        "https://samplette.io/*"
      ],
      "all_frames": true,
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "sounds/*",
      "sp303-compressor-worklet.js",
      "sp404-compressor-worklet.js",
      "icons/*.png",
      "icons/*.svg"
    ],
    "matches": ["<all_urls>"]
  }],
  "options_page": "options.html"
}
